<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lv_menu_file_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_48dp"
        android:id="@+id/iv_menu_file_encrypt_state"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DES加密中"
        android:id="@+id/tv_menu_file_encrypt_inf"
        android:layout_marginLeft="50dp"
        android:textSize="40dp"
        android:layout_alignBottom="@id/iv_menu_file_encrypt_state"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

</RelativeLayout>